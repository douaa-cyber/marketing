<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestion users</title>
  <link rel="icon" href="../bms.jfif" type="image/x-icon" style="width:500px;height:500px"  />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f4f7f6;
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
    }
    header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 20px 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 10000;
    
}
header .logo{
height: 50px;
}
    .container {
      margin-top: 50px;
      max-width: 1200px;
      width: 100%;
    }
    .card {
      border: none;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      background-color: #ffffff;
     margin-left: 20%;
    }
    .card-header {
      background: linear-gradient(to bottom right, #c2a7ea, #86cce8, #034ba9);
      color: #ffffff;
      padding: 20px;
      border-radius: 10px 10px 0 0;
      font-size: 1.75rem;
      text-align: center;
      
    }
    .table-container {
      max-height: 700px; 
      overflow-y: auto;
    }
    .table {
      margin-top: 20px;
      font-size: 1rem;
      width: 100%;
      border-collapse: collapse;
    }
    .table thead th {
      background-color: #588bc1;
      color: #ffffff;
      text-align: center;
      font-weight: bold;
      padding: 15px;
    }
    .table tbody tr:nth-child(even) {
      background-color: #f9f9f9;
    }
    .table tbody tr:hover {
      background-color: #e1e1e1;
    }
    .table tbody td {
      vertical-align: middle;
      text-align: center;
      padding: 15px;
      border: 1px solid #dee2e6;
    }
    .form-select, .btn-primary {
      border-radius: 8px;
    }
    .form-select {
      padding: 10px;
      border: 1px solid #ced4da;
      font-size: 1rem;
      width: 100%;
    }
    .btn-primary {
      background: linear-gradient(to bottom right, #2b7b77, #1a5c54, #014d40);
      border: none;
      color: #ffffff;
      padding: 12px 24px;
      font-size: 1rem;
      transition: background-color 0.3s ease;
    }
    .btn-primary:hover {
      background-color: #218838;
    }
    .btn-primary:focus {
      box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }
  </style>
</head>
<body>
  <header>
    <a href="/"><img class="logo" src="../bmsLogo.svg" /></a>
  </header>
  <div class="container">
    <div class="card">
      <div class="card-header">
        GERER UTILISATEUR
      </div>
      <div class="card-body">
        <DIV class="table-container">
          <form action="/admin/users" method="POST" class="mb-3">
            <div class="mb-3">
             
              <select id="company" name="company" class="form-select" required>
                <option value="">--Selectionner une societe--</option>
                <option value="Bms">Bms</option>
                <option value="Mono">Mono</option>
              </select>
            </div>
            <button type="submit" class="btn btn-primary" style="margin-left: 80%;">afficher Utilisateur</button>
          </form>
        <table class="table">
          <thead>
            <tr>
              <th>Username</th>
              <th>Role Courant</th>
              <th>Nouveau Role</th>
            </tr>
          </thead>
          <tbody >
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.username %></td>
                <td><%= user.roles %></td>
                <td>
                  <form action="/admin/users/updateRole" method="post" style="margin: 0;">
                    <input type="hidden" name="Id" value="<%= user.id %>">
                    <select name="newRole" class="form-select">
                      <option value="client" <%= user.role === 'client' ? 'selected' : '' %>>Client</option>
                      <option value="responsable" <%= user.role === 'responsable' ? 'selected' : '' %>>Responsable</option>
                      <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
                    </select>
                </td>
                <td>
                    <button type="submit" class="btn btn-primary">APPLIQUER</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </DIV>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>
</body>
</html>
