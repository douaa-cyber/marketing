    <script>
       document.addEventListener('DOMContentLoaded', function() {
    const menuToggle = document.getElementById('menu-toggle');
    const sidebar = document.getElementById('sidebar');
    const closeSidebar = document.getElementById('close-sidebar');
    const overlay = document.getElementById('overlay');
    const loginMessage = document.getElementById('login-message');
    // Assurez-vous que ce sélecteur correspond à votre bouton de menu

    menuToggle.addEventListener('click', function() {
        const isOpen = sidebar.style.left === '0px';
        sidebar.style.left = isOpen ? '-250px' : '0px';
        overlay.classList.toggle('visible');
        // Cacher ou montrer le bouton de menu
        menuToggle.style.display = isOpen ? 'block' : 'none';
    });

    closeSidebar.addEventListener('click', function() {
        sidebar.style.left = '-250px';
        overlay.classList.remove('visible');
        // Montrer le bouton de menu
        menuToggle.style.display = 'block';
    });

    overlay.addEventListener('click', function() {
        sidebar.style.left = '-250px';
        overlay.classList.remove('visible');
        // Montrer le bouton de menu
        menuToggle.style.display = 'block';
    });

    document.querySelector('.openbtn').addEventListener('click', function() {
        loginMessage.style.display = loginMessage.style.display === 'none' || loginMessage.style.display === '' ? 'block' : 'none';
    });
});

document.addEventListener("DOMContentLoaded", function() {
    const logoutButton = document.getElementById('logout-button');
    if (logoutButton) {
        logoutButton.addEventListener('click', function() {
            window.location.href = '/logout';
        });
    }
});
</script>
